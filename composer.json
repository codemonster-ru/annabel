{
    "name": "codemonster-ru/annabel",
    "description": "Elegant and lightweight PHP framework for modern web applications",
    "type": "library",
    "keywords": [
        "php",
        "framework",
        "router",
        "view",
        "container",
        "mvc",
        "codemonster",
        "annabel"
    ],
    "homepage": "https://github.com/codemonster-ru/annabel",
    "license": "MIT",
    "authors": [
        {
            "name": "Kirill Kolesnikov",
            "email": "admin@codemonster.net",
            "role": "Lead Developer"
        }
    ],
    "bin": [
        "bin/annabel"
    ],
    "scripts": {
        "test": "phpunit --colors=always --testdox"
    },
    "require": {
        "php": ">=8.2",
        "codemonster-ru/support": "^1.4",
        "codemonster-ru/view-php": "^2.1",
        "codemonster-ru/razor": "^1.1",
        "codemonster-ru/errors": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6 || ^10.5 || ^11.0 || ^12.0"
    },
    "suggest": {
        "codemonster-ru/ssr-bridge": "Enable Vue/React/Svelte SSR rendering bridge"
    },
    "autoload": {
        "psr-4": {
            "Codemonster\\Annabel\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "support": {
        "issues": "https://github.com/codemonster-ru/annabel/issues",
        "source": "https://github.com/codemonster-ru/annabel"
    },
    "archive": {
        "exclude": [
            "/tests",
            "/.github"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        }
    }
}
