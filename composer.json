{
    "name": "codemonster-ru/annabel",
    "description": "PHP framework Annabel",
    "type": "library",
    "keywords": [
        "framework",
        "annabel"
    ],
    "homepage": "https://github.com/codemonster-ru/annabel",
    "license": "MIT",
    "authors": [
        {
            "name": "Kirill Kolesnikov",
            "email": "admin@codemonster.ru",
            "role": "Lead Developer"
        }
    ],
    "scripts": {
        "test": "phpunit"
    },
    "require": {
        "php": ">=8.1"
    },
    "autoload": {
        "psr-4": {
            "Annabel\\": "src/"
        },
        "files": [
            "src/helpers/app.php",
            "src/helpers/basePath.php",
            "src/helpers/debug.php",
            "src/helpers/view.php"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Annabel\\Tests\\": "tests/"
        }
    },
    "archive": {
        "exclude": [
            "/tests",
            "/.github"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
